---
import SubtitleWithText from "./SubtitleWithText.astro";
export interface TimelineElement {
  company: string;
  title: string;
}

const { company, title } = Astro.props;
---

<div class="event">
  <SubtitleWithText subtitle={company} comment={title}>
    <slot />
  </SubtitleWithText>
</div>

<style>
  div.event {
    position: relative;
    border-radius: 6px;
    margin-bottom: 10px;
  }

  div.event::after {
    content: "";
    background: rgb(17, 17, 17, 0.7);
    border: 4px solid var(--secondary-color);
    width: 16px;
    height: 16px;
    border-radius: 50%;

    position: absolute;
    top: 0%;
    left: -44px;
  }
</style>
